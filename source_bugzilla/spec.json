{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bugzilla Spec",
    "type": "object",
    "required": ["api_key", "url", "product"],
    "additionalProperties": false,
    "properties": {
      "api_key": {
        "title": "Buzilla API Key",
        "type": "string",
        "description": "Bugzilla API Key",
        "airbyte_secret": true,
        "order": 1
      },
      "url": {
        "title": "Bugzilla URL",
        "type": "string",
        "description": "Bugzilla URL",
        "order": 2
      },
      "product": {
        "title": "Bugzilla Product",
        "type": "string",
        "description": "Bugzilla Product of interest",
        "order": 3
      }
    }
  }
}
